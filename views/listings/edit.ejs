<% layout("/layouts/boilerplate") -%>
<link rel="stylesheet" href="/css/edit.css">

<div class="edit-listing-page">

    <div class="edit-wrapper">

        <h2 class="edit-title">‚úèÔ∏è Edit Listing</h2>

        <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="edit-form">

            <div class="form-group">
                <input 
                    name="listing[title]" 
                    value="<%= listing.title %>" 
                    type="text" 
                    required>
            </div>

            <div class="form-group">
                <textarea 
                    name="listing[description]" 
                    rows="4"
                    required><%= listing.description %></textarea>
            </div>

            <div class="form-group">
                <input 
                    name="listing[image][url]" 
                    value="<%= listing.image.url %>" 
                    type="text" 
                    required>
            </div>

            <div class="form-group">
                <input 
                    name="listing[price]" 
                    value="<%= listing.price %>" 
                    type="number" 
                    required>
            </div>

            <div class="form-group dual">
                <input 
                    name="listing[country]" 
                    value="<%= listing.country %>" 
                    type="text" 
                    required>

                <input 
                    name="listing[location]" 
                    value="<%= listing.location %>" 
                    type="text" 
                    required>
            </div>

            <button type="submit" class="update-btn">
                üíæ Update Listing
            </button>

        </form>

    </div>

</div>