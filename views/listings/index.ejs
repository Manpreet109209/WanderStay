<% layout("/layouts/boilerplate") -%>
<link rel="stylesheet" href="/css/index.css">

<div class="index-page">

    <h2 class="index-page-title">✨ Explore All Listings ✨</h2>

    <div class="index-cards-container">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="index-listing-card">
                
                <div class="index-card-image">
                    <img src="<%= listing.image.url %>" alt="<%= listing.title %>">
                </div>

                <div class="index-card-content">
                    <h3><%= listing.title %></h3>
                    <p class="index-card-description">
                        <%= listing.description ? listing.description.substring(0, 80) : "Beautiful stay awaits you..." %>...
                    </p>
                    <p class="index-card-price">
                        ₹ <%= listing.price.toLocaleString("en-IN") %>
                    </p>
                </div>

            </a>
        <% } %>
    </div>

</div>